{
  "name": "it.magius.gamedek",
  "version": "0.0.1",
  "productName": "GameDek",
  "productTitle": "GameDek",
  "description": "Fancy themable panel to place all game links.",
  "main": "desktop.js",
  "author": {
    "name": "Magius(CHE)",
    "email": "magiusche@magius.it"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron . --develop",
    "prod": "electron .",
    "release": "electron-builder",
    "dist:linux": "yarn release -l",
    "dist:linux:deb": "yarn release -l deb",
    "dist:linux:targz": "yarn release -l tar.gz",
    "dist:linux:appimage": "yarn release -l AppImage",
    "dist:linux:snap": "yarn release -l snap",
    "dist:win": "yarn release -w",
    "publish:draft:_common": "yarn release --publish always",
    "publish:draft:linux": "yarn publish:draft:_common -l",
    "publish:draft:win": "yarn publish:draft:_common -w",
    "publish:draft": "yarn publish:draft:_common -wl",
    "update-mi": "cd themes/default/3th/material-icons/ && curl --fail-with-body https://raw.githubusercontent.com/google/material-design-icons/master/font/MaterialIconsOutlined-Regular.otf > MaterialIcons-Outlined-Regular.otf && curl --fail-with-body https://raw.githubusercontent.com/google/material-design-icons/master/font/MaterialIconsRound-Regular.otf > MaterialIcons-Filled-Regular.otf && sfnt2woff MaterialIcons-Filled-Regular.otf && sfnt2woff MaterialIcons-Outlined-Regular.otf"
  },
  "dependencies": {
    "@electron/remote": "^1.0.4",
    "command-line-parser": "^0.1.10",
    "electron-default-menu": "^1.0.2",
    "md5": "^2.3.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "platform-folders": "^0.5.2",
    "rimraf": "^3.0.2",
    "sprintf-js": "^1.1.2",
    "sqlite": "^4.0.21",
    "sqlite3": "^5.0.2",
    "yaml": "^1.10.2"
  },
  "build": {
    "appId": "it.magius.gamedek",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "linux": {
      "asar": true,
      "category": "Game",
      "packageCategory": "Game",
      "executableName": "gamedek",
      "synopsis": "GameDek",
      "description": "Fancy themable panel to place all game links.",
      "desktop": {
        "Name": "GameDek",
        "Comment": "Fancy themable panel to place all game links.",
        "StartupWMClass": "GameDek"
      },
      "target": [
        "deb",
        "rpm",
        "tar.gz",
        "AppImage"
      ]
    },
    "win": {
      "target": "7z",
      "asar": true
    }
  },
  "devDependencies": {
    "electron": "^12.0.0"
  }
}
